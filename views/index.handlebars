<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Burger Cat-fe</h1>
        <br>
        <div class="catburger"></div>
        <br>
        <p class="lead">Place your order below and devour as many burgers as you like!</p>
    </div>
</div>
<br><br>
<div class="row">
    <div class="col-md-6">
        <div class="card w-40">
            <div class="card-header">Your burgers are ready</div>
            <div class="card-body">
                <h5 class="card-title">Devour them while it's hot!</h5>
                <p class="card-text">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}<br>
                    {{> burger/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card w-40">
            <div class="card-header">All the burgers you have eaten</div>
            <div class="card-body">
                <h5 class="card-title">Want to re-order?</h5>
                <p class="card-text">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}<br>
                    {{> burger/burger-block devoured=false}}<br>
                    {{/if}}
                    {{/each}}
                </ul>
                </p>
            </div>
        </div>
    </div>
</div>
<br><br>
<div class="row">
    <div class="col-md-10">
        <div class="card w-70">
            <div class="card-header">Order A Burger Here</div>
            <div class="card-body">
                <p class="card-text">
                <form class="create-form">

                    <div class="form-group">
                        <label for="newBurger">Place Order:</label>
                        <input type="text" id="newBurger" name="burger_name">
                    </div>

                    <button class="btn btn-outline-success" type="submit">Burger Me</button>
                </form>
                </p>
            </div>
        </div>
    </div>